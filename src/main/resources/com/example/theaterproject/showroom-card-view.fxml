<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-border-radius: 15; -fx-border-color: #333; -fx-border-width: 2; -fx-background-color: #f9f9f9; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.theaterproject.Controllers.ShowroomCardController">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="aShowRoomNameLabel" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Showroom Name" />
            <Label fx:id="aMovieInfoLabel" style="-fx-font-size: 12; -fx-text-fill: #666;" text="(Next movie) showing at XX:XX" />
            <Button fx:id="moreButton" onAction="#onMoreButtonClick" style="-fx-font-size: 14; -fx-padding: 10 40; -fx-background-color: #540808; -fx-text-fill: white; -fx-background-radius: 25;" text="More" />
        </VBox>
    </center>
</BorderPane>
