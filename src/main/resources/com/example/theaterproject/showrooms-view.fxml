            <Region HBox.hgrow="ALWAYS" />

            <Label fx:id="pageTitleLabel" alignment="BOTTOM_CENTER" contentDisplay="CENTER" minHeight="75.0" text="Showrooms" textAlignment="CENTER" textFill="WHITE" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="50.0" right="50.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <Label fx:id="userLabel" alignment="TOP_RIGHT" contentDisplay="RIGHT" text="Welcome, User" textAlignment="RIGHT" textFill="WHITE">
