<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="350" prefWidth="600" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.theaterproject.Controllers.ShowroomAddEditViewController">

    <children>

        <HBox maxHeight="75" minHeight="75.0" prefHeight="75.0" prefWidth="606.0" style="-fx-background-color: #540808;" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Theater Name" textFill="WHITE">
                    <font><Font size="24" /></font>
                    <HBox.margin><Insets bottom="0" left="10" right="0" top="0" /></HBox.margin>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label fx:id="pageTitleLabel" alignment="BASELINE_CENTER" text="Showroom" textFill="WHITE" HBox.hgrow="NEVER">
                    <font><Font size="16" /></font>
               <HBox.margin>
                  <Insets top="50.0" />
               </HBox.margin>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label fx:id="userLabel" alignment="CENTER_RIGHT" text="Welcome, User" textFill="WHITE">
                    <font><Font size="18" /></font>
                    <HBox.margin><Insets bottom="0" left="0" right="10" top="0" /></HBox.margin>
                </Label>
            </children>
        </HBox>

        <HBox spacing="20" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <children>
                <VBox spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Label text="Name">
                        <font><Font size="14" /></font>
                    </Label>
                    <TextField fx:id="aShowroomNameField" maxWidth="220" />

                    <Label text="Capacity">
                        <font><Font size="14" /></font>
                    </Label>
               <TextField fx:id="aCapacityTextField" maxWidth="220" />
               <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
               <VBox alignment="BOTTOM_CENTER" maxHeight="-Infinity" prefHeight="41.0" prefWidth="220.0" VBox.vgrow="ALWAYS">
                  <children>
                     <Button fx:id="aSaveButton" alignment="BOTTOM_CENTER" onAction="#onSaveButtonClick" prefWidth="100" text="Save" VBox.vgrow="ALWAYS" />
                  </children>
               </VBox>
                </VBox>

                <VBox spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Screenings">
                            <font><Font size="14" /></font>
                        </Label>

                        <ListView fx:id="aScreeningList" VBox.vgrow="ALWAYS" />

                        <HBox alignment="CENTER" spacing="50.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Button onAction="#onAddScreeningButtonClick" prefWidth="80" text="Add" />
                                <Button onAction="#onEditScreeningButtonClick" prefWidth="80" text="Edit" />
                                <Button onAction="#onRemoveScreeningButtonClick" prefWidth="80" text="Remove" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>

    </children>

    <padding>
        <Insets bottom="10.0" />
    </padding>

</VBox>
