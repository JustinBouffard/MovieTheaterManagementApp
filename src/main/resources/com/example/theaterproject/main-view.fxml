<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.theaterproject.Controllers.MainViewController">

    <children>

        <!-- ========================================================= -->
        <!-- HEADER BAR (unchanged styling) -->
        <!-- ========================================================= -->
        <HBox maxHeight="75.0" minHeight="75.0" prefWidth="594.0" style="-fx-background-color: #540808;" VBox.vgrow="NEVER">
            <children>

                <Label alignment="TOP_LEFT" text="Theater Name" textFill="WHITE">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>

                <Region minWidth="40.0" HBox.hgrow="ALWAYS" />

                <Label fx:id="pageTitleLabel" alignment="BOTTOM_CENTER" contentDisplay="CENTER" minHeight="75.0" text="Upcoming Movies" textAlignment="CENTER" textFill="WHITE" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="50.0" right="50.0" />
                    </HBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </Label>

                <Region prefHeight="75.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
            <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
      
                      <Label fx:id="userLabel" alignment="TOP_RIGHT" contentDisplay="RIGHT" prefHeight="27.0" prefWidth="141.0" text="Welcome, User" textAlignment="RIGHT" textFill="WHITE">
                          <font>
                              <Font size="18.0" />
                          </font>
                          <cursor>
                              <Cursor fx:constant="DEFAULT" />
                          </cursor>
                     <VBox.margin>
                        <Insets right="10.0" />
                     </VBox.margin>
                      </Label>
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="signOutButton" mnemonicParsing="false" onAction="#onSignOutButtonClick" text="Sign out" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets bottom="10.0" right="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>

            </children>
        </HBox>

        <!-- ========================================================= -->
        <!-- SCROLLABLE AREA (fixed so it scrolls + no overlap) -->
        <!-- ========================================================= -->
        <HBox fillHeight="false" prefHeight="300.0" prefWidth="575.0" VBox.vgrow="NEVER">
            <children>

                <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" pannable="true" vbarPolicy="ALWAYS" HBox.hgrow="ALWAYS">

                    <content>
                        <VBox spacing="5.0">
                            <children>

                                <!-- ========================================================= -->
                                <!-- MOVIE GRIDPANE (fixed) -->
                                <!-- - No RowConstraints (SceneBuilder broke your layout)
                                     - Constant column widths to fit movie cards
                                     - Auto-expands vertically, enabling scroll -->
                                <!-- ========================================================= -->
                                <GridPane fx:id="movieGridPane" hgap="20" prefWidth="574.0" style="-fx-padding: 10;" vgap="20">

                                    <columnConstraints>
                                        <!-- 3 columns matching your card width -->
                                        <ColumnConstraints hgrow="NEVER" minWidth="200" prefWidth="200" />
                                        <ColumnConstraints hgrow="NEVER" minWidth="200" prefWidth="200" />
                                        <ColumnConstraints hgrow="NEVER" minWidth="200" prefWidth="200" />
                                    </columnConstraints>

                                </GridPane>

                            </children>
                        </VBox>
                    </content>

                </ScrollPane>

            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>

    </children>

    <padding>
        <Insets bottom="10.0" />
    </padding>

</VBox>
