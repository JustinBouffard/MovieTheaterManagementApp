<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.theaterproject.Controllers.EditShowtimeController"
      spacing="15"
      prefWidth="350"
      prefHeight="260">

    <children>

        <HBox minHeight="50" maxHeight="50" style="-fx-background-color: #540808;" alignment="CENTER_LEFT">
            <children>
                <Label text="Edit Showtime" textFill="WHITE">
                    <font><Font size="20"/></font>
                    <HBox.margin><Insets left="15"/></HBox.margin>
                </Label>
            </children>
        </HBox>

        <VBox spacing="12">
            <padding><Insets left="20" right="20" top="15" bottom="15"/></padding>

            <VBox spacing="5">
                <Label text="Movie:"/>
                <ComboBox fx:id="movieComboBox" prefWidth="300"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Date:"/>
                <DatePicker fx:id="datePicker" prefWidth="300"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Time (HH:mm):"/>
                <TextField fx:id="timeField" promptText="19:30"/>
            </VBox>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="cancelButton" text="Cancel" prefWidth="80"/>
                <Button fx:id="saveButton" text="Save" prefWidth="80"/>
            </HBox>

        </VBox>

    </children>

</VBox>
