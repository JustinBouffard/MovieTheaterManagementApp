<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="234.0" prefWidth="350" spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.theaterproject.Controllers.ScreeningAddEditViewController">

    <children>

        <HBox alignment="CENTER_LEFT" maxHeight="50" minHeight="50" style="-fx-background-color: #540808;" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Add/Edit Screening" textFill="WHITE">
                    <font><Font size="20" /></font>
                    <HBox.margin><Insets left="15" /></HBox.margin>
                </Label>
            </children>
        </HBox>

        <VBox spacing="12" VBox.vgrow="ALWAYS">
            <padding><Insets bottom="15" left="20" right="20" top="15" /></padding>

            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Label text="Movie:" />
                <ComboBox fx:id="aMovieComboBox" prefWidth="300" />
            </VBox>

            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Label text="Date:" />
                <DatePicker fx:id="aDatePicker" prefWidth="300" />
            </VBox>
         <VBox spacing="5">
            <children>
               <Label text="Price Per Ticket:" />
            </children>
         </VBox>
         <TextField fx:id="aPriceField" />

            <HBox alignment="CENTER_RIGHT" spacing="10" VBox.vgrow="ALWAYS">
                <Button fx:id="aCancelButton" onAction="#onCancelButtonClick" prefWidth="80" text="Cancel" />
                <Button fx:id="aSaveButton" onAction="#onSaveButtonClick" prefWidth="80" text="Save" />
            </HBox>

        </VBox>

    </children>

</VBox>
