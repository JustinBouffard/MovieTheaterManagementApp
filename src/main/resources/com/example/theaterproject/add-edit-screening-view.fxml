<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="234.0" prefWidth="350" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.theaterproject.Controllers.ScreeningAddEditViewController">

    <children>

        <HBox alignment="CENTER_LEFT" maxHeight="50" minHeight="50" style="-fx-background-color: #540808;" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Add/Edit Screening" textFill="WHITE">
                    <font><Font size="20" /></font>
                    <HBox.margin><Insets left="15" /></HBox.margin>
                </Label>
            </children>
        </HBox>

        <VBox spacing="12" VBox.vgrow="ALWAYS">
            <padding><Insets bottom="15" left="20" right="20" top="15" /></padding>

            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Label text="Movie:" />
                <ComboBox fx:id="aMovieComboBox" prefWidth="300" />
            </VBox>

            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Label text="Date:" />
                <DatePicker fx:id="aDatePicker" prefWidth="300" />
            </VBox>
         <VBox spacing="5">
            <children>
               <Label text="Time:" />
               <HBox spacing="40.0">
                  <children>
                     <Label text="Hours" />
                     <Label text="Minutes" />
                  </children>
               </HBox>
               <HBox spacing="10.0">
                  <children>
                     <Spinner fx:id="aHoursSpinner" editable="true" prefWidth="60.0" />
                     <Spinner fx:id="aMinutesSpinner" editable="true" prefWidth="60.0" />
                  </children>
               </HBox>
            </children>
         </VBox>
         <VBox spacing="5">
            <children>
               <Label text="Price Per Ticket:" />
               <TextField fx:id="aPriceField" />
            </children>
         </VBox>
         <VBox spacing="5">
            <children>
               <Label text="Ticket Count:" />
               <TextField fx:id="aTicketCountTextField" />
            </children>
         </VBox>

            <HBox alignment="CENTER_RIGHT" spacing="10" VBox.vgrow="ALWAYS">
                <Button fx:id="aCancelButton" onAction="#onCancelButtonClick" prefWidth="80" text="Cancel" />
                <Button fx:id="aSaveButton" onAction="#onSaveButtonClick" prefWidth="80" text="Save" />
            </HBox>

        </VBox>

    </children>

</VBox>
