<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.theaterproject.Controllers.EditorViewController">
    <children>
        <HBox maxHeight="75.0" minHeight="75.0" prefWidth="594.0" style="-fx-background-color: #540808;" VBox.vgrow="ALWAYS">
            <children>
                <Label alignment="TOP_LEFT" text="Theater Name" textFill="WHITE">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
                <Region minWidth="40.0" HBox.hgrow="ALWAYS" />
                <Label fx:id="pageTitleLabel" alignment="BOTTOM_CENTER" contentDisplay="CENTER" minHeight="75.0" text="Movie Editing" textAlignment="CENTER" textFill="WHITE" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="50.0" right="50.0" />
                    </HBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </Label>
                <Region minWidth="40.0" HBox.hgrow="ALWAYS" />
                <Label fx:id="userLabel" alignment="TOP_RIGHT" contentDisplay="RIGHT" text="Welcome, Manager" textAlignment="RIGHT" textFill="WHITE" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Label>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
        <HBox VBox.vgrow="ALWAYS">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="addMovieButton" defaultButton="true" mnemonicParsing="false" onAction="#onAddMovieButtonClick" prefHeight="26.0" prefWidth="100.0" text="Add Movie">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin></Button>
                  <Separator prefWidth="200.0" />
                        <Button fx:id="showroomsViewButton" mnemonicParsing="false" onAction="#onShowroomsViewButtonClick" prefHeight="26.0" prefWidth="100.0" text="Showrooms">
                            <VBox.margin>
                                <Insets bottom="10.0" top="5.0" />
                            </VBox.margin></Button>
                        <Button fx:id="statsViewButton" mnemonicParsing="false" onAction="#onStatsViewButtonClick" prefHeight="26.0" prefWidth="100.0" text="Stats">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin></Button>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </VBox>
                <Separator orientation="VERTICAL">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin></Separator>
            <ScrollPane fx:id="movieScrollPane" prefHeight="200.0" prefWidth="465.0" fitToWidth="true" HBox.hgrow="ALWAYS">
               <content>
                  <VBox>
                     <children>
                        <TilePane fx:id="movieGridPane" prefHeight="200.0" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" />
    </padding>
</VBox>
